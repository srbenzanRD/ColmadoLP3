@page "/productos";
@using Colmado.Data;
<AddEditProducto>
    
</AddEditProducto>
<div class="row">
    <div class="col">
        <h3>Productos</h3>
    </div>
    <div class="col-2">
        <button class="btn btn-outline-success">
            <i class="oi oi-plus"></i>
        </button>
    </div>
</div>


<table class="table">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Precio</th>
            <th>Unidades</th>
            <th>SubTotal</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in ListaDeProductos)
        {
            <tr>
                <td class="col">@producto.Descripcion</td>
                <td class="col-2">@producto.Precio.ToString("N2")</td>
                <td class="col-2">@producto.Cantidad lb</td>
                <td class="col-2">@producto.SubTotal</td>
                <td>
                    <div class="btn-group">
                        <button class="btn btn-outline-warning">
                            <i class="oi oi-pencil"></i>
                        </button>
                        <button class="btn btn-outline-danger">
                            <i class="oi oi-trash"></i>
                        </button>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
@code {
    public List<Producto> ListaDeProductos { get; set; } = new List<Producto>()
    {
        new Producto(){Descripcion = "Habichuela",  Cantidad = 7, Precio = 50},
        new Producto(){Descripcion = "Habichuela 1", Cantidad = 14, Precio = 60},
