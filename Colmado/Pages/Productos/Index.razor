        new Producto(){Descripcion = "Habichuela 3", Cantidad = 1, Precio = 150},
        new Producto(){Descripcion = "Habichuela 4", Cantidad = 11, Precio = 250},
        new Producto(){Descripcion = "Habichuela 5", Cantidad = 11, Precio = 450},
        new Producto(){Descripcion = "Habichuela 6", Cantidad = 16, Precio = 550},
    };
}
